mixin services_features_list(icon, href, title, active)
	if (active == "true")
		li(role='presentation')
			// feature tab menu #1
			a.active.show(href=href, role="tab", data-toggle="tab", aria-selected="true")
				span.fa(class=icon)
				| #[=title]
	else
		li(role='presentation')
			// feature tab menu #1
			a(href=href, aria-controls='f1', role='tab', data-toggle='tab')
				span.fa(class=icon)
				| #[=title]
